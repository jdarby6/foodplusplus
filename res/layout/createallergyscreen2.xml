<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/blankbackground"
    android:layout_height="fill_parent">
  
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:gravity="top"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="Great! Should we include any known allergies?"
        android:textSize="16sp"
        android:textStyle="bold" 
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:paddingBottom="0dp"
        android:layout_margin="0dp"
        />

    </LinearLayout> 
 
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
   >
	  	
	  <ListView android:id="@+id/listallergycreate2"
	    android:layout_width="fill_parent" 
	    android:background="@android:color/transparent"
		android:cacheColorHint="@android:color/transparent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1" >
	    </ListView>
      
     </LinearLayout>
     <LinearLayout
        android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:layout_weight="0.1"
    	android:background="@null"
      >
	 
         <ImageButton
		        android:id="@+id/buttonBackAllergyCreate2"
		        android:layout_weight="1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/backbtn"
		        android:padding="0dp"
		        android:background="@null"
    			android:scaleType="centerInside"
    			android:layout_marginBottom="5dp"
    			android:layout_marginLeft="5dip"
    			android:layout_marginRight="5dip"
		     />
  	
  		<ImageButton
		        android:id="@+id/buttonForwardAllergyCreate2"
		        android:layout_weight="1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/continuebtn"
		        android:padding="0dp"
		        android:background="@null"
    			android:scaleType="centerInside"
    			android:layout_marginBottom="5dp"
    			android:layout_marginRight="5dip"
		     />
         
         </LinearLayout>

</LinearLayout>