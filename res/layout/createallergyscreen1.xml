<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/blankbackground"
    android:layout_height="fill_parent">
        
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.9"
   >
   <LinearLayout
  	    android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
  	    
  	    > 
    <TextView 
        android:text="Let's create a new allergy! What shall we call it?"
        android:textSize="25dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:gravity="center_vertical|center_horizontal"
        />
    </LinearLayout>

  	<LinearLayout
  	    android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
  	    
  	    > 
    <EditText
        android:id="@+id/editTextAllergyCreate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="Allergy Name"
     >
     
    </EditText>
    
    <GridView xmlns:android="http://schemas.android.com/apk/res/android" 
			android:id="@+id/gridAllergies"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:stretchMode="columnWidth"
			android:numColumns="auto_fit"
			android:columnWidth="45dp"
			android:gravity="center_horizontal|center_vertical"
			>			
      </GridView>
    
    
    </LinearLayout> 
  
  </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   >
  	<ImageButton
		        android:id="@+id/buttonDiscardAllergy1"
		        android:layout_weight="1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/discardbtn"
		        android:padding="0dp"
		        android:layout_alignParentBottom="true"
		        android:background="@null"
    			android:scaleType="centerInside"
    			android:layout_marginBottom="10dp"
    			android:layout_marginLeft="5dip"
    			android:layout_marginRight="5dip"
		     />
  	
  	<ImageButton
		        android:id="@+id/buttonCreateAllergy1"
		        android:layout_weight="1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/createbtn"
		        android:padding="0dp"
		        android:layout_alignParentBottom="true"
		        android:background="@null"
    			android:scaleType="centerInside"
    			android:layout_marginBottom="10dp"
    			android:layout_marginRight="5dip"
		     />
      
      </LinearLayout>

</LinearLayout>