<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:padding="10dp"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:background="@drawable/squareish_blank_background" 
    > 
        <TextView
            android:id="@+id/toptextingred"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:layout_gravity="top"
            android:text="TestIngredient"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:textColor="?android:attr/textColorPrimary"
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/bottomtextingred"
            android:textColor="?android:attr/textColorPrimary"
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:layout_marginTop="5dp"
            android:id="@+id/bottomtextingred2"
            android:text="Don't eat if you are..."
            android:textColor="#ff0000"
         />
       	<GridView  
			android:id="@+id/myGrid"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:stretchMode="columnWidth"
			android:numColumns="auto_fit"
			android:columnWidth="50dp"
			>			
      </GridView>
           	
   	<ImageButton
   	    android:id="@+id/closeCard"
   	    android:layout_width="fill_parent"
   	    android:layout_height="35dp"
   	    android:text="Close"
   	    android:src="@drawable/new_closebtn"
   	    android:scaleType="fitXY"
   	    android:background="@null"
   	    >
   	    
   	</ImageButton> 
     
</LinearLayout>