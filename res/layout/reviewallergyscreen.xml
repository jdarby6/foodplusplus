<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/blankbackground"
    android:layout_height="fill_parent">
        
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.9"
   >
    <TextView 
        android:id="@+id/textviewreviewallergyintro"
        android:text="Sweet! How does this look?"
        android:textSize="22dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:paddingBottom="0dp"
        android:layout_margin="2dp"
        
        />
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="0dp"
        >
        <ImageView
		        android:id="@+id/iconcreateallergy"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/icon" 
	        />
	    <TextView 
	        android:id="@+id/textviewreviewallergy"
	        android:text="testallergy"
	        android:textSize="22dp"
	        android:textColor="?android:attr/textColorPrimary"
	        android:textStyle="bold"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal|bottom"
	        android:layout_marginLeft="10dp"
	        />
		    
	 </LinearLayout>
	    
    
    <ListView 
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:background="@android:color/transparent"
		android:cacheColorHint="@android:color/transparent"
        android:layout_height="0dip"
        android:layout_weight="1"
        >
        
    </ListView>
    </LinearLayout> 
  
  <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="40dp"
    	android:background="@null"
   >
    
    <ImageButton
		        android:id="@+id/buttonDiscardAllergy1"
		        android:layout_weight="1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/backbtn"
		        android:padding="0dp"
		        android:background="@null"
    			android:scaleType="fitXY"
    			android:layout_marginBottom="5dp"
    			android:layout_marginLeft="5dip"
    			android:layout_marginRight="5dip"
		     />
   
   		<ImageButton
		        android:id="@+id/buttonCreateAllergy1"
		        android:layout_weight="1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/createbtn"
		        android:padding="0dp"
		        android:background="@null"
    			android:scaleType="fitXY"
    			android:layout_marginRight="5dip"
    			android:layout_marginBottom="5dp"
		     />
      
      </LinearLayout>

</LinearLayout>