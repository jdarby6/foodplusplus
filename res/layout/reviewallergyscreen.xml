<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
        
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.9"
   >
    <TextView 
        android:id="@+id/textviewreviewallergyintro"
        android:text="Great! How does this look for"
        android:textSize="22dp"
        android:textColor="?android:attr/textColorSecondary"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        />
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="4dp"
        >
        
	    <TextView 
	        android:id="@+id/textviewreviewallergy"
	        android:text="testallergy"
	        android:textSize="30dp"
	        android:textColor="?android:attr/textColorPrimary"
	        android:textStyle="bold"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_marginRight="10dp"
	        />
		    <ImageView
		        android:id="@+id/iconcreateallergy"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/icon" 
	        />
	 </LinearLayout>
	    
    
    <ListView 
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        >
        
    </ListView>
    </LinearLayout> 
  
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.05"
   >
    <Button
        android:id="@+id/buttonDiscardAllergy1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:text="Back" />
	<Button
        android:id="@+id/buttonCreateAllergy1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:text="Create" />
    
    
      
      </LinearLayout>

</LinearLayout>